                    app:layout_constraintEnd_toEndOf="@id/txt3C"
                    app:layout_constraintStart_toStartOf="@id/txt3C"
                    app:layout_constraintTop_toBottomOf="@id/txt3C" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout3">

                <TextView
                    android:id="@+id/question4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/avenir_lt_pro_black"
                    android:text="Question 4"
                    android:textColor="@color/description"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/txt4A"
                    style="@style/QuestionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/question4"
                    app:layout_constraintTop_toBottomOf="@id/question4"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/txt4B"
                    style="@style/QuestionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    app:layout_constraintEnd_toEndOf="@id/txt4A"
                    app:layout_constraintStart_toStartOf="@id/txt4A"
                    app:layout_constraintTop_toBottomOf="@id/txt4A" />

                <TextView
