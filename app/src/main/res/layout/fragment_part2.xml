<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.Part2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/question1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/avenir_lt_pro_black"
                android:text="Question 1"
                android:textColor="@color/title"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt1A"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/question1"
                app:layout_constraintTop_toBottomOf="@id/question1"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt1B"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="B"
                app:layout_constraintEnd_toEndOf="@id/txt1A"
                app:layout_constraintStart_toStartOf="@id/txt1A"
                app:layout_constraintTop_toBottomOf="@id/txt1A" />

            <TextView
                android:id="@+id/txt1C"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                app:layout_constraintEnd_toEndOf="@id/txt1B"
                app:layout_constraintStart_toStartOf="@id/txt1B"
                app:layout_constraintTop_toBottomOf="@id/txt1B" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avenir_lt_pro_black"
                android:text="Question 2"
                android:textColor="@color/title"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@id/question1"
                app:layout_constraintTop_toBottomOf="@id/txt1C" />

            <TextView
                android:id="@+id/txt2A"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A"
                android:tag="phase2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/question2"
                app:layout_constraintTop_toBottomOf="@id/question2"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt2B"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="B"
                app:layout_constraintEnd_toEndOf="@id/txt2A"
                app:layout_constraintStart_toStartOf="@id/txt2A"
                app:layout_constraintTop_toBottomOf="@id/txt2A" />

            <TextView
                android:id="@+id/txt2C"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                app:layout_constraintEnd_toEndOf="@id/txt2B"
                app:layout_constraintStart_toStartOf="@id/txt2B"
                app:layout_constraintTop_toBottomOf="@id/txt2B" />


            <TextView
                android:id="@+id/question3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avenir_lt_pro_black"
                android:text="Question 3"
                android:textColor="@color/title"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@id/question2"
                app:layout_constraintTop_toBottomOf="@id/txt2C" />

            <TextView
                android:id="@+id/txt3A"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/question3"
                app:layout_constraintTop_toBottomOf="@id/question3"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/txt3B"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="B"
                app:layout_constraintEnd_toEndOf="@id/txt3A"
                app:layout_constraintStart_toStartOf="@id/txt3A"
                app:layout_constraintTop_toBottomOf="@id/txt3A" />

            <TextView
                android:id="@+id/txt3C"
                style="@style/QuestionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                app:layout_constraintEnd_toEndOf="@id/txt3B"
                app:layout_constraintStart_toStartOf="@id/txt3B"
                app:layout_constraintTop_toBottomOf="@id/txt3B" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>