<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.Part2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/avenir_lt_pro_black"
            android:lineSpacingExtra="8sp"
            android:text="Question 11:"
            android:textColor="@color/title"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/txtA"
            app:layout_constraintEnd_toEndOf="@+id/txtA"
            app:layout_constraintStart_toStartOf="@+id/txtA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />
        <!--answer-->
        <TextView
            android:id="@+id/txtA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/answer_1"
            android:fontFamily="@font/avenir_lt_pro_light"
            android:gravity="center_vertical"
            android:text="A"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txtB"
            app:layout_constraintEnd_toEndOf="@+id/txtB"
            app:layout_constraintStart_toStartOf="@+id/txtB"
            app:layout_constraintTop_toBottomOf="@+id/question"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txtB"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/answer_1"
            android:fontFamily="@font/avenir_lt_pro_light"
            android:gravity="center_vertical"
            android:text="B"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txtC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtA"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txtC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/answer_1"
            android:fontFamily="@font/avenir_lt_pro_light"
            android:gravity="center_vertical"
            android:text="C"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtB"
            app:layout_constraintStart_toStartOf="@+id/txtB"
            app:layout_constraintTop_toBottomOf="@+id/txtB"
            tools:ignore="RtlCompat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>